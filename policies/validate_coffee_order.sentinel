# Parameters and variables
param coffee_name default "HCP Aeropress"
param coffee_size default "small"

# Valid coffee names
valid_coffees = [
  "HCP Aeropress",
  "Packer Spiced Latte",
  "Vaulatte",
  "Nomadicano",
  "Terraspresso",
  "Vagrante espresso",
  "Connectaccino",
  "Boundary Red Eye",
  "Waypointiato",
]

valid_sizes = ["small", "medium", "large"]

## Rules

# Validate coffee name
validate_name = rule {
  coffee_name in valid_coffees
}

# Validate coffee size
validate_size = rule {
  coffee_size in valid_sizes
}

# Main rule to validate a coffee order
main = rule {
  validate_name and
  validate_size
}
